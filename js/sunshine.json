{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Scatter plot of sunshine vs rainfall across Australian cities.",
  "width": 800,
  "height": 400,
  "title": "Rainfall vs Sunshine Across Australian Cities",
  "data": {"url": "https://raw.githubusercontent.com/shichenlee123/FIT3179_A2/refs/heads/main/data/Weather%20Test%20Data.csv"},
  "mark": {"type": "circle", "opacity": 0.7},
  "transform": [
    {
      "filter": "indexof(['Sydney','Melbourne','Brisbane','Perth','Adelaide', 'Canberra', 'Hobart', 'Darwin'], datum.location) >= 0"
    }
  ],

  "params": [
    {
      "name": "citySelection",
      "select": {"type": "point", "fields": ["location"]}, 
      "bind": "legend"
    }
  ],
  "encoding": {
    "x": {"field": "Sunshine", "type": "quantitative", "title": "Sunshine (hrs)"},
    "y": {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)"},
    "color": {
      "field": "location",
      "type": "nominal",
      "title": "City",
      "legend": {"title": "Click to filter cities"}
    },
    "opacity": {
      "condition": {"param": "citySelection", "value": 1},
      "value": 0.05
    },
    "tooltip": [
      {"field": "location"},
      {"field": "Sunshine"},
      {"field": "rainfall"},
      {"field": "Humidity3pm"}
    ]
  }
}