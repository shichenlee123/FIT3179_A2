{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Scatter plot of rainfall vs temperature across Australian cities.",
  "width": 800,
  "height": 400,
  "title": "Rainfall vs Temperature Across Australian Cities",
  "data": {
    "url": "https://raw.githubusercontent.com/shichenlee123/FIT3179_A2/refs/heads/main/data/Weather%20Test%20Data.csv"
  },

  "params": [
    {
      "name": "citySearch",
      "value": "",
      "bind": {"input": "text", "placeholder": "Type city name..."}
    }
  ],

  "transform": [
    {
      "filter": "citySearch == '' || test(citySearch, datum.location, 'i')"
    }
  ],
  "mark": {"type": "point", "filled": true, "opacity": 0.7},
  "encoding": {
    "x": {"field": "MaxTemp", "type": "quantitative", "title": "Temperature (°C)"},
    "y": {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)"},
    "color": {
      "field": "location",
      "type": "nominal",
      "title": "City",
      "legend": null
    },
    "tooltip": [
      {"field": "location", "title": "City"},
      {"field": "rainfall", "title": "Rainfall (mm)", "type": "quantitative", "format": ".1f"},
      {"field": "MaxTemp", "title": "Temperature (°C)", "type": "quantitative", "format": ".1f"}
    ]
  }
}
